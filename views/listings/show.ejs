
    <%layout("layouts/boilerplate")%>
    <div class="row mt-4 mb-5">
      <div class="col-6 offset-3">
        <h3><%-data.title%></h3>
      </div>
      <div class="card col-6 offset-3 listing-card">
        <img
          src="<%-data.image.url%>"
          class="card-img-top show-img"
          alt="Listing-image"
        />
        <div class="card-body">
         <b>Owned By:</b> <i><%-data.owner.username%></i> <br>
          <b>Description:</b><%-data.description%> <br />
          <b>Price:</b
          ><%-data.price.toLocaleString("en-IN",{style:"currency",currency:"INR"})%>
          <br />
          <b>Location:</b><%-data.location%> <br />
          <b>Country:</b><%-data.country%>
        </div>
      </div>
     

      <% if(user && data.owner._id.equals(user._id)){%>
      <div class="show-btns">
        <a
          href="/listings/<%-data._id%>/edit"
          class="btn btn-dark col-1 offset-3 add-btn"
          >Edit</a
        >
        <form action="/listings/<%=data._id%>?_method=DELETE" method="POST">
          <button type="sumbit" class="btn btn-dark offset-4">Delete</button>
        </form>
      </div>
      <%}%>
    </div>
   
    <hr>
<%if(user){%>
    <!-- Reviews section -->
     <div class="col-6 offset-3 mb-3">
        <h3>Reviews</h3>

        <form action="/listings/<%-data._id%>/reviews" method="POST" novalidate class="needs-validation">
          <div class="mb-3">
           
          <fieldset class="starability-checkmark">
             <legend>First rating:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
             <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          </div>


          <div class="mb-3">
            <label for="comment" >Comment</label>
            <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
            <div  class="invalid-feedback">
            Please add some comments for review.
          </div>
          </div>
        <button type="submit" class="btn btn-dark">Submit</button>
        </form>
      </div>
      <%}%>
   
      <div class="col-6 offset-3 mb-3">
      
      <%if(data.reviews.length > 0){%>
        <hr>
     <p><b>All Reviews</b></p>
     <div class="row">

      <%for(let review of data.reviews){%>
        <div class="card col-5 ms-3 mb-3 pt-2">
          <div class="card-body">
           
            <p class="card-text"><%-review.comment%></p>
           
             <p class="starability-result" data-rating="<%-review.rating%>">
                 Rated: <%-review.rating%> stars
              </p>
          <form action="/listings/<%-data._id%>/reviews/<%-review._id%>?_method=DELETE" class="mb-3" method="POST">
            <button class="btn btn-dark">Delete</button>
          </form>
           </div>
        </div>
      <%}%>

     </div>
     <%}%>
      </div>
    </div>

